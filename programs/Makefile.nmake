CFLAGS=/W3 /WX /I..\usrsctplib

CVARSDLL=-DINET -DINET6

LINKFLAGS=/LIBPATH:..\usrsctplib usrsctp.lib

.c.obj::
	$(CC) $(CVARSDLL) $(CFLAGS) -Fd.\ -c $<

all: \
	client \
	client_upcall \
	daytime_server \
	daytime_server_upcall \
	discard_server \
	discard_server_upcall \
	echo_server \
	echo_server_upcall \
	tsctp \
	rtcweb \
	ekr_client \
	ekr_server \
	ekr_peer \
	ekr_loop \
	ekr_loop_offload \
	ekr_loop_upcall \
	test_libmgmt \
	http_client \
	http_client_upcall

